{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug current problem (case #1)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/runner/case_runner.py",
            "args": [
                "${fileBasenameNoExtension}",
                "1"
            ],
            "python": "${workspaceFolder}/leetcode/Scripts/python.exe",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
            "name": "Debug current problem (case #2)",
