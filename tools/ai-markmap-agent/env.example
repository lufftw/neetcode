# =============================================================================
# AI Markmap Agent - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-org-id-here  # Optional

# -----------------------------------------------------------------------------
# Anthropic Configuration (for Claude models)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# -----------------------------------------------------------------------------
# Optional: Pinecone (if using Pinecone for LTM)
# -----------------------------------------------------------------------------
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=us-west1-gcp

# -----------------------------------------------------------------------------
# Optional: Custom API Base URLs (for proxies)
# -----------------------------------------------------------------------------
# OPENAI_API_BASE=https://your-proxy.com/v1
# ANTHROPIC_API_BASE=https://your-proxy.com

# -----------------------------------------------------------------------------
# Logging Level
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

